<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nihar.eswing.HomePage"
    android:background="@drawable/grass">
    //android:id="@+id/">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eSwingLogo"
        android:src="@drawable/eswing_logo"
        android:layout_alignEnd="@+id/sign_in_button"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:focusable="false"
        android:cropToPadding="false"
        android:baselineAlignBottom="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:id="@+id/sign_in_button"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New User?"
        android:id="@+id/textView2"
        android:textColor="@color/accent_material_dark"
        android:layout_alignBottom="@+id/button2"
        android:layout_toStartOf="@+id/sign_in_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up!"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/eSwingLogo"
        android:layout_marginBottom="54dp" />

</RelativeLayout>
